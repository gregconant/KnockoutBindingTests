@model KnockoutBindingTest.Models.PrimaryViewModel


@using (Html.BeginForm("Edit", "Home"))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>PrimaryViewModel</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.Id)
		@Html.EditorFor(model => model.Person)
		@Html.EditorFor(model => model.Orders)

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<button data-bind="click: addOrder">Add One Order</button>
				<button data-bind="click: removeOrder">Remove One Order</button>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
