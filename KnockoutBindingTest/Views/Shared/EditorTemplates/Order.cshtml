@model KnockoutBindingTest.Models.Order
<!-- ko foreach: orders -->
<fieldset>
	<div class="form-horizontal">
		<h4>Order</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.OrderName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.OrderName, new { htmlAttributes = new { @class = "form-control", @data_bind = "value: orderName, namePath: true" } })
				@Html.ValidationMessageFor(model => model.OrderName, "", new { @class = "text-danger" })
			</div>
			<div class="form-group">
				@Html.LabelFor(model => model.PrimaryInfo, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.PrimaryInfo, new { @data_bind= "value: primaryInfo, namePath: true" })
				</div>
			</div>
			<div class="form-group">
				@Html.LabelFor(model => model.SecondaryInfo, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.EditorFor(model => model.SecondaryInfo, new { @data_bind= "value: secondaryInfo, namePath: true" })
				</div>
			</div>
		</div>
	</div>
</fieldset>
<!-- /ko -->